@page "/support"

<PageTitle>Support</PageTitle>

<div class="panel">
    <div class="panel-header">
        <h1 class="h4">Support & hjælpedokumenter</h1>
        <button class="btn btn-sm btn-outline-primary">Kontakt support</button>
    </div>
    <p class="text-muted">Find svar på hyppige spørgsmål, arbejdsgange og kvalitetscheck-lister.</p>

    <div class="accordion" id="supportAccordion">
        @for (var i = 0; i < _items.Count; i++)
        {
            var item = _items[i];
            <div class="accordion-item">
                <h2 class="accordion-header" id="heading-@i">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@i" aria-expanded="false" aria-controls="collapse-@i">
                        @item.Title
                    </button>
                </h2>
                <div id="collapse-@i" class="accordion-collapse collapse" aria-labelledby="heading-@i" data-bs-parent="#supportAccordion">
                    <div class="accordion-body">
                        @item.Body
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@code {
    private readonly IReadOnlyList<(string Title, string Body)> _items = new[]
    {
        ("Hvordan starter jeg en ny rapport?", "Åbn wizard og følg trinene. Sørg for at perioden er valgt i topbaren."),
        ("Hvordan importerer jeg data?", "Gå til Imports-siden og træk dine CSV-filer ind. Brug valideringsresuméet til at afklare fejl."),
        ("Hvordan håndterer jeg afvigelser?", "Åbn arbejdslisterne, filtrer på 'Afvigelser' og brug kommentar-funktionen til at dokumentere."),
    };
}

@inherits LayoutComponentBase

<div class="app-shell">
    <aside class="app-nav" aria-label="Primary navigation">
        <NavMenu />
    </aside>

    <div class="app-main">
        <TopBar />

        <div class="app-body">
            <section class="app-alerts">
                <DiagnosticAlert />
            </section>

            <section class="app-content" tabindex="-1">
                <ErrorBoundary>
                    <ChildContent>
                        <AntiforgeryToken />
                        @Body
                    </ChildContent>
                    <ErrorContent>
                        <ErrorDisplay Exception="context" />
                    </ErrorContent>
                </ErrorBoundary>
            </section>
        </div>
    </div>
</div>

<ToastContainer />

<div id="blazor-error-ui" class="visually-hidden" aria-live="assertive">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">ðŸ—™</a>
</div>
